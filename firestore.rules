rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
         // --- HELPER FUNCTION ---
    function isAdminOrOwner() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email == 'spoilmevintagediy@gmail.com'
      );
    }

    // --- PRODUCTS & CATEGORIES ---
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }

    // --- ORDERS (Users create, Admins manage) ---
    match /orders/{orderId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdminOrOwner());
      allow create: if request.auth != null;
      allow update, delete: if isAdminOrOwner();
    }

    // --- USERS (Protect Loyalty Points) ---
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdminOrOwner());
      allow write: if isAdminOrOwner();
      allow delete: if isAdminOrOwner();

      // Allow users to update their profile fields (firstName, lastName, email, dateOfBirth, gender, favoriteColor, country, displayName, etc.)
      // BUT block them from changing sensitive fields like 'loyaltyPoints', 'membershipTier', 'role' manually
      // (The Backend Cloud Function handles points/tiers securely)
      // Admins can update any fields
      allow update: if request.auth != null && (request.auth.uid == userId || isAdminOrOwner())
         && (request.auth.uid == userId || !request.resource.data.diff(resource.data).affectedKeys().hasAny(['loyaltyPoints', 'membershipTier', 'role', 'storeCredit', 'creditCurrency', 'membershipStatus', 'trialExpiresAt', 'nextCreditDrop', 'adminPermissions']));

      allow create: if request.auth != null && request.auth.uid == userId;

      // âœ… NEW RULE: Allow users to save their Push Tokens in the sub-collection
      match /push_tokens/{tokenId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- USERS COLLECTION (Admin Access) ---
    match /users {
      allow read: if isAdminOrOwner();
    }

    // --- LOYALTY SHARE LOGS (Anti-Fraud) ---
    match /share_logs/{logId} {
      allow read: if isAdminOrOwner();
      // Only backend (Admin SDK) writes here usually, but if client writes, ensure ID matches
      allow write: if false; // Strict security: Only Cloud Functions can write to logs
    }

    // --- SOCIAL AUTO-PILOT LOGS ---
    match /social_logs/{logId} {
      allow read: if isAdminOrOwner();
      allow write: if false; // Only Cloud Functions can write
    }

    // --- NOTIFICATIONS ---
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdminOrOwner());
      allow write: if isAdminOrOwner(); // Cloud Functions create notifications
    }

    // --- ARTIST COLLECTIONS ---
    match /artist_applications/{applicationId} {
      allow read: if isAdminOrOwner();
      allow create: if request.auth != null && request.auth.uid == resource.data.uid;
      allow update, delete: if isAdminOrOwner();
    }
    match /artists/{artistId} {
      allow read, write: if isAdminOrOwner();
    }
    match /artist_products/{productId} {
      allow read, write: if isAdminOrOwner();
    }
  }
}