rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
    allow read; // Public read access for product images
    allow write: if request.auth != null && request.auth.token.admin == true; // Only authenticated users can write
    }
    match /{allPaths=**} {
    allow read, write: if request.auth != null && request.auth.token.admin == true; // Only authenticated users can write
    }
  }
}